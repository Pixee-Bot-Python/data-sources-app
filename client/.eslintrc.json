{
	"root": true,
	"extends": [
		"@pdap-design-system/eslint-config"
	],
	"plugins": [
		"prettier"
	],
	"rules": {
		"vue/require-default-prop": "off",
		// Switch base eslint indent rule off
		"indent": "off",
		"vue/html-self-closing": [
			"error",
			{
				"html": {
					"void": "always",
					"normal": "always",
					"component": "always"
				},
				"svg": "always",
				"math": "always"
			}
		],
		"prettier/prettier": [
			// Use prettier indent rule instead
			"warn",
			{
				"indent": [
					"warn",
					"tab",
					{
						"SwitchCase": 2
					}
				],
				"tabWidth": 2,
				"useTabs": true
			}
		],
		"vue/no-multiple-template-root": "off"
	}
}